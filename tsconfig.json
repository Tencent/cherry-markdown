{
  "compilerOptions": {
    // "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    // "outFile": "types/cherry-markdown.d.ts",
    "outDir": "dist/types",
    "target": "ES5",
    "paths": {
      "@/*": ["src/*"],
      "~types/*": ["types/*"]
    }
  },
  "include": ["src/index.js", "src/index.core.js", "src/index.engine.js", "src/**/*.ts"],
  "exclude": ["**/node_modules/**", "src/libs/**/*", "dist"],
  "files": ["types/codemirror.d.ts", "types/global.d.ts"]
}
