{
  "compilerOptions": {
    // "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist/addons",
    "target": "ES5",
    "paths": {
      "@/libs/*": ["src/libs/*"]
    },
  },
  // 按需引入addons，尽量不引入编辑器代码
  "include": [
    "src/addons/**/*-plugin.js",
  ],
  "files": [
    "types/codemirror.d.ts",
    "types/global.d.ts"
  ]
}
